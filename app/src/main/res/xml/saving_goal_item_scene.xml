<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetStart="@id/start_saving_item"
        app:constraintSetEnd="@id/end_saving_item"
        app:duration="500">
        <OnClick app:targetId="@id/img_saving_expand"
            app:clickAction="toggle"/>
    </Transition>
    <ConstraintSet android:id="@+id/start_saving_item">
        <Constraint
            android:id="@+id/saving_sunken_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:layout_constraintTop_toBottomOf="@id/saving_floating_part"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/img_saving_expand"
            android:rotation="0"/>
        <Constraint
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/img_saving_expand"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end_saving_item">
        <Constraint   android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/img_saving_expand"
            android:id="@+id/saving_sunken_part"
            android:alpha="1"/>
        <Constraint
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:layout_constraintTop_toBottomOf="@id/saving_floating_part"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/img_saving_expand"
            android:rotation="180"/>
        <Constraint
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/saving_sunken_part"/>
    </ConstraintSet>
</MotionScene>