<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="actionMenuTextColor">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>
    <style name="SplashFullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.Moony.Backdrop" parent="">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Moony.MenuItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="background">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="Widget.Moony.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="drawableTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.Moony.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/nimbus_roman_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="Widget.Moony.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/nimbus_roman_medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Widget.Moony.Headline4" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/nimbus_roman_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_25sdp</item>
    </style>
    <style name="Widget.Moony.Title2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/nimbus_roman_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_23sdp</item>
    </style>

    <style name="Widget.Moony.Title1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Moony.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Moony.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:scaleType">centerCrop</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.Moony.TextInputLayout.OutlineBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/textColor</item>
        <item name="hintTextColor">@color/textColor</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
    </style>
</resources>
