<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_800</item>
        <item name="colorAccent">@color/orange_800</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/scream_50</item>
        <item name="colorControlHighlight">@color/green_100</item>
        <item name="colorControlNormal">@color/green_500</item>
        <item name="actionMenuTextColor">@color/green_800</item>
        <item name="colorOnSecondary">@color/green_600</item>
        <item name="colorSecondary">@color/orange_800</item>
    </style>
    <style name="Widget.Moony.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/scream_50</item>
        <item name="titleTextColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="Widget.Moony.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="fontFamily">@font/nimbus_roman_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
    <style name="Widget.Moony.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="fontFamily">@font/nimbus_roman_medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="Widget.Moony.Headline4" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="fontFamily">@font/nimbus_roman_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_25sdp</item>
    </style>
    <style name="Widget.Moony.Title1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Moony.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Moony.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
