<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EFEF"
    app:layoutDescription="@xml/scene_main"
    tools:context=".activities.MainActivity">


    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFBE6"
        app:layout_constraintStart_toEndOf="@+id/nav_main_menu">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Number 1"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold"
            android:textColor="#255b7a"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nav_main_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#fffbe6"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/nav_menu"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/btn_nav_main"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_title_main"
        style="@style/Widget.Moony.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/nav_space_swipe"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.motion.widget.MotionLayout>